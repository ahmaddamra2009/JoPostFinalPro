@model JoPostFinalPro.Models.Slider

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Slider</h4>
